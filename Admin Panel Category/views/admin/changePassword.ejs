<%- include('../header') %>

    <style>
        :root {
            --dark-bg-1: #1a1d21;
            --dark-bg-2: #22252a;
            --card-bg: #2b2e32;
            --input-bg: #383b40;
            --text-light: #e0e0e0;
            --text-muted: #b0b0b0;
            --border-color: #3c4046;
            --primary-blue-gradient: linear-gradient(90deg, #007bff 0%, #4facfe 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
            color: var(--text-light);
        }

        .page-wrapper {
            background-color: transparent;
            padding-top: 30px;
            /* Adjust as needed for header space */
            padding-bottom: 30px;
        }

        .page-breadcrumb {
            margin-bottom: 30px;
            padding: 0 20px;
            /* Add some padding to breadcrumb area */
        }

        .page-title {
            color: var(--text-light);
            font-weight: 600;
            font-size: 2.2rem;
            letter-spacing: 0.02em;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 0;
        }

        .breadcrumb-item a {
            color: var(--text-muted);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb-item a:hover {
            color: #007bff;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
            overflow: hidden;
            /* Ensures child elements respect border-radius */
        }

        .card:hover {
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.6);
        }

        .card-body {
            padding: 40px;
        }

        .card-title {
            color: var(--text-light);
            font-size: 1.8rem;
            margin-bottom: 30px;
            font-weight: 600;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 15px;
        }

        .form-group.row {
            margin-bottom: 25px;
            align-items: center;
        }

        .control-label {
            color: var(--text-light);
            font-weight: 500;
            font-size: 1rem;
            padding-top: calc(0.375rem + 1px);
            /* Align with form-control padding */
            text-align: left !important;
            /* Override text-end for better mobile alignment */
        }

        @media (min-width: 768px) {
            .control-label {
                text-align: right !important;
            }
        }

        .form-control {
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            color: var(--text-light);
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background-color: #44494f;
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25), inset 0 2px 5px rgba(0, 0, 0, 0.3);
            outline: none;
        }

        .form-control::placeholder {
            color: #777;
            opacity: 0.8;
        }

        .border-top {
            border-top: 1px solid var(--border-color) !important;
            margin-top: 30px;
            padding-top: 20px;
        }

        .btn-primary {
            background: var(--primary-blue-gradient);
            border: none;
            font-size: 1.1rem;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            letter-spacing: 0.03rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
            text-transform: uppercase;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.6);
            filter: brightness(1.1);
        }

        /* Preloader if any */
        .preloader {
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
        }

        .lds-ripple div {
            border: 4px solid #fff;
        }
    </style>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Change Password</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Account Security
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/changeMyNewPassword">
                            <div class="card-body">
                                <h4 class="card-title">Update Your Password</h4>

                                <div class="form-group row">
                                    <label for="currentPassword"
                                        class="col-sm-4 text-end control-label col-form-label">Current Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="currentPassword"
                                            name="currentPassword" placeholder="Current Password Here" required />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="newPassword" class="col-sm-4 text-end control-label col-form-label">New
                                        Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                                            placeholder="New Password Here" required />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="conformPassword"
                                        class="col-sm-4 text-end control-label col-form-label">Confirm Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="conformPassword"
                                            name="conformPassword" placeholder="Confirm New Password Here" required />
                                    </div>
                                </div>

                            </div>
                            <div class="border-top">
                                <div class="card-body text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Change Password
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../footer') %>