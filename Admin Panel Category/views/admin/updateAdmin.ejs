<%- include('../header') %>

    <style>
        :root {
            --dark-bg-1: #1a1d21;
            --dark-bg-2: #22252a;
            --card-bg: #2b2e32;
            --input-bg: #383b40;
            --text-light: #e0e0e0;
            --text-muted: #b0b0b0;
            --border-color: #3c4046;
            --primary-blue-gradient: linear-gradient(90deg, #007bff 0%, #4facfe 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
            color: var(--text-light);
        }

        .page-wrapper {
            background-color: transparent;
            padding-top: 30px;
            /* Adjust as needed for header space */
            padding-bottom: 30px;
        }

        .page-breadcrumb {
            margin-bottom: 30px;
            padding: 0 20px;
            /* Add some padding to breadcrumb area */
        }

        .page-title {
            color: var(--text-light);
            font-weight: 600;
            font-size: 2.2rem;
            letter-spacing: 0.02em;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 0;
        }

        .breadcrumb-item a {
            color: var(--text-muted);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb-item a:hover {
            color: #007bff;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
            overflow: hidden;
            /* Ensures child elements respect border-radius */
        }

        .card:hover {
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.6);
        }

        .card-body {
            padding: 40px;
        }

        .card-title {
            color: var(--text-light);
            font-size: 1.8rem;
            margin-bottom: 30px;
            font-weight: 600;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 15px;
        }

        .form-group.row {
            margin-bottom: 25px;
            align-items: center;
        }

        .control-label {
            color: var(--text-light);
            font-weight: 500;
            font-size: 1rem;
            padding-top: calc(0.375rem + 1px);
            /* Align with form-control padding */
            text-align: left !important;
            /* Override text-end for better mobile alignment */
        }

        @media (min-width: 768px) {
            .control-label {
                text-align: right !important;
            }
        }

        .form-control,
        .form-select,
        .form-check-label {
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            color: var(--text-light);
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus,
        .form-check-input:focus~.form-check-label {
            background-color: #44494f;
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25), inset 0 2px 5px rgba(0, 0, 0, 0.3);
            outline: none;
        }

        .form-control::placeholder {
            color: #777;
            opacity: 0.8;
        }

        /* Custom Radio/Checkbox styling */
        .form-check-input {
            appearance: none;
            width: 18px;
            height: 18px;
            border-radius: 4px;
            border: 2px solid var(--border-color);
            background-color: var(--input-bg);
            margin-right: 8px;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            vertical-align: middle;
            position: relative;
            top: -1px;
        }

        .form-check-input[type="radio"] {
            border-radius: 50%;
        }

        .form-check-input:checked {
            background-color: #007bff;
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
        }

        .form-check-input[type="checkbox"]:checked::before {
            content: '\2713';
            /* Checkmark character */
            display: block;
            color: white;
            font-size: 14px;
            line-height: 14px;
            text-align: center;
        }

        .form-check-input[type="radio"]:checked::before {
            content: '';
            display: block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: white;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .form-check-label {
            color: var(--text-light);
            cursor: pointer;
            background-color: transparent;
            /* Override input-like background */
            border: none;
            /* Override input-like border */
            box-shadow: none;
            /* Override input-like shadow */
            padding: 0;
            /* Override input-like padding */
            line-height: 1.5;
            /* Ensure proper line height */
        }

        .form-check {
            padding-left: 0;
            /* Remove default padding for custom input positioning */
            margin-bottom: 10px;
            /* Space out radio/checkbox options */
            display: flex;
            align-items: center;
        }

        /* Custom File Input */
        .custom-file {
            position: relative;
            display: inline-block;
            width: 100%;
            margin-bottom: 15px;
            /* Space between file input and image */
        }

        .custom-file-input {
            min-height: 44px;
            /* Ensure sufficient height for the button look */
            cursor: pointer;
            padding-right: 120px;
            /* Space for the "Choose file" text */
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            color: var(--text-light);
            border-radius: 8px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .custom-file-label {
            position: absolute;
            top: 0;
            right: 0;
            z-index: 1;
            height: 100%;
            padding: 10px 15px;
            line-height: 1.5;
            color: var(--text-light);
            background-color: #007bff;
            /* Button color */
            border: 1px solid #007bff;
            border-radius: 0 8px 8px 0;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .custom-file-input:focus~.custom-file-label {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .custom-file-input:hover~.custom-file-label {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .custom-file img {
            display: block;
            max-width: 100px;
            /* Max width for the preview image */
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid var(--border-color);
            margin-top: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }


        .border-top {
            border-top: 1px solid var(--border-color) !important;
            margin-top: 30px;
            padding-top: 20px;
        }

        .btn-primary {
            background: var(--primary-blue-gradient);
            border: none;
            font-size: 1.1rem;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            letter-spacing: 0.03rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
            text-transform: uppercase;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.6);
            filter: brightness(1.1);
        }

        /* Preloader if any */
        .preloader {
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
        }

        .lds-ripple div {
            border: 4px solid #fff;
        }
    </style>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Update Admin</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Admin Management
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/editAdmin/<%= data.id %>"
                            enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title">Edit Admin Details</h4>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-end control-label col-form-label">First
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="fname" name="fname"
                                            value="<%= data.fname%>" placeholder="First Name Here" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-end control-label col-form-label">Last
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="lname" name="lname"
                                            value="<%= data.lname%>" placeholder="Last Name Here" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email"
                                        class="col-sm-3 text-end control-label col-form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" id="email" name="email"
                                            value="<%= data.email%>" placeholder="Email Here" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="password"
                                        class="col-sm-3 text-end control-label col-form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" id="password" name="password"
                                            value="<%= data.password%>" placeholder="Password Here" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="gender"
                                        class="col-sm-3 text-end control-label col-form-label">Gender</label>
                                    <div class="col-md-9">
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation1"
                                                name="gender" value="Male" <% if(data.gender=='Male' ) { %> checked <%
                                                }%> required />
                                                <label class="form-check-label"
                                                    for="customControlValidation1">Male</label>
                                        </div>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation2"
                                                name="gender" value="Female" <% if(data.gender=='Female' ) { %> checked
                                            <% }%> required />
                                                <label class="form-check-label"
                                                    for="customControlValidation2">Female</label>
                                        </div>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation3"
                                                name="gender" value="Other" <% if(data.gender=='Other' ) { %> checked <%
                                                }%> required />
                                                <label class="form-check-label"
                                                    for="customControlValidation3">Other</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="hobby"
                                        class="col-sm-3 text-end control-label col-form-label">Hobby</label>
                                    <div class="col-md-9">
                                        <% let myHobby=['Reading', 'Coding' , 'Gaming' ]; %>
                                            <% myHobby.map((item)=> { %>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input"
                                                        id="hobby_<%= item.toLowerCase() %>" name="hobby" <%
                                                        if(data.hobby.includes(item) ) { %> checked <% }%>
                                                        value="<%= item %>" />
                                                            <label class="form-check-label"
                                                                for="hobby_<%= item.toLowerCase() %>">
                                                                <%= item %>
                                                            </label>
                                                </div>
                                                <% }) %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="city"
                                        class="col-sm-3 text-end control-label col-form-label">City</label>
                                    <div class="col-md-9">
                                        <select class="form-select shadow-none" style="width: 100%; height: 36px"
                                            name="city" id="citySelect">
                                            <option>Select</option>
                                            <% let myCity=['Surat', 'Baroda' , 'Rajkot' , 'Mumbai' , 'RCB' ];%>
                                                <% myCity.map((item)=> { %>
                                                    <option value="<%= item %>" <% if(data.city==item ) { %> selected
                                                        <% }%>>
                                                            <%= item %>
                                                    </option>
                                                    <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="desc"
                                        class="col-sm-3 text-end control-label col-form-label">Description</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control" name="desc" id="desc"><%= data.desc%></textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="avatar"
                                        class="col-sm-3 text-end control-label col-form-label">Avatar</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="avatar"
                                                id="validatedCustomFile" />
                                            <label class="custom-file-label" for="validatedCustomFile">Choose
                                                file...</label>

                                            <img src="../<%= data.avatar %>" height="100" alt="Current Avatar">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="border-top">
                                <div class="card-body text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Edit Admin
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <%- include('../footer') %>