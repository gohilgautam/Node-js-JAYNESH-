<%- include('../header') %>

    <style>
        :root {
            --dark-bg-1: #1a1d21;
            --dark-bg-2: #22252a;
            --card-bg: #2b2e32;
            --table-header-bg: #343a40;
            --table-row-odd-bg: #2d3136;
            --table-row-even-bg: #272a2e;
            --text-light: #e0e0e0;
            --text-muted: #b0b0b0;
            --border-color: #3c4046;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
            color: var(--text-light);
        }

        .page-wrapper {
            background-color: transparent;
            padding-top: 30px;
            /* Adjust as needed for header space */
            padding-bottom: 30px;
        }

        .page-breadcrumb {
            margin-bottom: 30px;
            padding: 0 20px;
            /* Add some padding to breadcrumb area */
        }

        .page-title {
            color: var(--text-light);
            font-weight: 600;
            font-size: 2.2rem;
            letter-spacing: 0.02em;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 0;
        }

        .breadcrumb-item a {
            color: var(--text-muted);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb-item a:hover {
            color: #007bff;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        /* Alerts */
        .alert {
            margin-top: 20px;
            border-radius: 8px;
            font-weight: 500;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            animation: fadeIn 0.5s ease-out;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .alert strong {
            margin-right: 10px;
        }

        .alert .btn-close {
            background: none;
            border: none;
            font-size: 1.2rem;
            color: inherit;
            /* Inherit color from alert */
            opacity: 0.8;
            transition: opacity 0.3s ease;
        }

        .alert .btn-close:hover {
            opacity: 1;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
            overflow: hidden;
            /* Ensures child elements respect border-radius */
        }

        .card-body {
            padding: 30px;
        }

        .card-title {
            color: var(--text-light);
            font-size: 1.8rem;
            margin-bottom: 25px;
            font-weight: 600;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 15px;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: var(--text-light);
            border-collapse: separate;
            /* Required for border-spacing */
            border-spacing: 0 10px;
            /* Space between rows */
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid var(--border-color);
            background-color: var(--table-header-bg);
            color: #007bff;
            /* Highlight header text */
            font-weight: 600;
            padding: 15px;
            text-align: left;
            border-top: none;
            /* Remove default top border */
        }

        .table tbody tr {
            background-color: var(--table-row-even-bg);
            transition: background-color 0.3s ease, transform 0.2s ease;
            border-radius: 8px;
            /* Apply border-radius to rows */
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: var(--table-row-odd-bg);
        }

        .table tbody tr:hover {
            background-color: #3a3f45;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .table td,
        .table th {
            padding: 15px;
            vertical-align: middle;
            border-top: 1px solid var(--border-color);
            /* Separator between cells */
        }

        .table tbody tr:first-child td {
            border-top: none;
            /* No top border for the very first row */
        }

        .table tbody td img {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
        }

        .table .mdi {
            font-size: 1.4rem;
            margin: 0 5px;
            transition: transform 0.2s ease;
        }

        .table .mdi-border-color {
            /* Edit icon */
            color: var(--info-color);
        }

        .table .mdi-border-color:hover {
            color: #00c0f5;
            transform: scale(1.2);
        }

        .table .mdi-delete {
            /* Delete icon */
            color: var(--danger-color);
        }

        .table .mdi-delete:hover {
            color: #ff4d6b;
            transform: scale(1.2);
        }
    </style>

