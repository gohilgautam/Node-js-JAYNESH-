<%- include('../header') %>
    <link href="../dist/css/style.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.5.95/css/materialdesignicons.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <style>
        :root {
            --primary-blue: #007bff;
            --dark-bg-1: #1a1d21;
            --dark-bg-2: #22252a;
            --card-bg: #2b2e32;
            --input-bg: #383b40;
            --text-light: #e0e0e0;
            --text-muted: #b0b0b0;
            --border-color: #3c4046;
            --success-color: #28a745;
            --danger-color: #dc3545;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-image: linear-gradient(to bottom, #191c24 0%, #191c24 50%, #191c24 51%, #191c24 100%), url(https://cdn.pixabay.com/photo/2022/01/03/05/45/sunset-6911736_1280.jpg);
            background-blend-mode: soft-light;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        body::before,
        body::after {
            content: '';
            position: absolute;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 50%;
            filter: blur(80px);
            animation: floatEffect 15s infinite ease-in-out alternate;
            z-index: -1;
        }

        body::before {
            width: 300px;
            height: 300px;
            top: 10%;
            left: 5%;
            animation-duration: 20s;
            background: rgba(0, 123, 255, 0.1);
        }

        body::after {
            width: 400px;
            height: 400px;
            bottom: 15%;
            right: 8%;
            animation-duration: 18s;
            background: rgba(220, 53, 69, 0.1);
        }

        @keyframes floatEffect {
            0% {
                transform: translate(0, 0) scale(1);
            }

            50% {
                transform: translate(20px, -20px) scale(1.05);
            }

            100% {
                transform: translate(0, 0) scale(1);
            }
        }

        .auth-wrapper {
            background-color: transparent;
            width: 100%;
        }

        .auth-box {
            background-color: var(--card-bg);
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.6);
            padding: 50px;
            max-width: 500px;
            width: 100%;
            border: 1px solid var(--border-color);
            position: relative;
            animation: fadeInScale 0.6s ease-out;
        }

        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(20px);
            }

            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .auth-box .text-center h2 {
            font-size: 2.8rem;
            color: var(--text-light);
            margin-bottom: 25px;
            font-weight: 700;
            letter-spacing: 0.05rem;
        }

        .auth-box .instruction-text {
            color: var(--text-muted);
            margin-bottom: 40px;
            font-size: 1rem;
            line-height: 1.6;
            opacity: 0.9;
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-group label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 10px;
            display: block;
            font-size: 1rem;
            opacity: 0.9;
        }

        .input-group {
            position: relative;
        }

        .input-group-prepend .input-group-text {
            background-color: var(--input-bg) !important;
            border: 1px solid var(--input-bg) !important;
            color: var(--text-muted) !important;
            border-right: none;
            padding: 0.9rem 1.2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 1.2rem;
        }

        .form-control-lg {
            background-color: var(--input-bg);
            box-shadow: inset 0 3px 8px rgba(0, 0, 0, 0.4);
            border: 1px solid var(--input-bg);
            color: var(--text-light);
            padding: 0.9rem 7.2rem;
            height: auto;
            border-left: none;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .form-control-lg:focus {
            background-color: #44494f;
            border-color: transparent;
            outline: none;
            box-shadow: 0 0 0 0.3rem rgba(0, 123, 255, 0.3), inset 0 3px 8px rgba(0, 0, 0, 0.4);
        }

        .input-group:focus-within .form-control-lg::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #007bff, #4facfe, #007bff);
            border-radius: 9px;
            z-index: 0;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .input-group:focus-within .input-group-prepend .input-group-text {
            background-color: var(--primary-blue) !important;
            border-color: var(--primary-blue) !important;
            color: var(--text-light) !important;
            transform: scale(1.05);
        }

        .form-control-lg::placeholder {
            color: #777;
            opacity: 0.8;
        }

        .btn-info {
            background: linear-gradient(90deg, var(--primary-blue) 0%, #4facfe 100%);
            border: none;
            font-size: 1.1rem;
            padding: 12px 30px;
            border-radius: 8px;
            margin: 30px auto 0 auto;
            font-weight: 600;
            letter-spacing: 0.03rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
            display: block;
            max-width: 250px;
        }

        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.6);
            background: linear-gradient(90deg, #4facfe 0%, var(--primary-blue) 100%);
        }

        .back-to-login {
            margin-top: 30px;
            font-size: 1rem;
        }

        .back-to-login a {
            color: var(--primary-blue);
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back-to-login a:hover {
            color: #4facfe;
            text-decoration: underline;
            transform: translateY(-1px);
        }

        #message-area {
            margin-top: 30px;
            padding: 15px 20px;
            border-radius: 8px;
            font-size: 0.95rem;
            display: none;
            font-weight: 500;
            animation: slideInFromTop 0.4s ease-out;
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.2);
            color: var(--success-color);
            border: 1px solid var(--success-color);
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.2);
            color: var(--danger-color);
            border: 1px solid var(--danger-color);
        }

        @keyframes slideInFromTop {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .preloader {
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <div class="
          auth-wrapper
          d-flex
          no-block
          justify-content-center
          align-items-center
        ">
            <div class="auth-box">
                <div id="forgotPasswordForm">
                    <div class="text-center">
                        <h2 class="text-white">Forgot Password?</h2>
                        <p class="instruction-text">
                            No worries! Enter your registered email address below and we'll send you
                            a secure link to reset your password.
                        </p>
                    </div>
                    <form class="form-horizontal mt-3" method="post" action="/checkEmail" id="resetForm">
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="mdi mdi-email fs-4"></i><input type="email"
                                            class="form-control form-control-lg" placeholder="your.email@example.com"
                                            aria-label="Email Address" aria-describedby="basic-addon1" name="email"
                                            id="email" required /></span>

                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button class="btn btn-info text-white" type="submit">
                                    Send Reset Link
                                </button>
                            </div>
                        </div>

                        <div class="row mt-4 back-to-login">
                            <div class="col-12 text-center">
                                <a href="/">Remembered your password? Back to Login</a>
                            </div>
                        </div>

                        <div id="message-area" class="text-center mt-3" role="alert">
                        </div>
                    </form>
                </div>
            </div>
        </div>    
        <%- include('../footer')%>