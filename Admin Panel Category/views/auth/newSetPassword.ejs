<%- include('../header') %>
    <link href="../dist/css/style.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.5.95/css/materialdesignicons.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <style>
        :root {
            --primary-blue: #007bff;
            --dark-bg-1: #1a1d21;
            --dark-bg-2: #22252a;
            --card-bg: #2b2e32;
            --input-bg: #383b40;
            --text-light: #e0e0e0;
            --text-muted: #b0b0b0;
            --border-color: #3c4046;
            --success-color: #28a745;
            --danger-color: #dc3545;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        body::before,
        body::after {
            content: '';
            position: absolute;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 50%;
            filter: blur(80px);
            animation: floatEffect 15s infinite ease-in-out alternate;
            z-index: -1;
        }

        body::before {
            width: 300px;
            height: 300px;
            top: 10%;
            left: 5%;
            animation-duration: 20s;
            background: rgba(0, 123, 255, 0.1);
        }

        body::after {
            width: 400px;
            height: 400px;
            bottom: 15%;
            right: 8%;
            animation-duration: 18s;
            background: rgba(220, 53, 69, 0.1);
        }

        @keyframes floatEffect {
            0% {
                transform: translate(0, 0) scale(1);
            }

            50% {
                transform: translate(20px, -20px) scale(1.05);
            }

            100% {
                transform: translate(0, 0) scale(1);
            }
        }

        .auth-wrapper {
            background-color: transparent !important;
            width: 100%;
        }

        .auth-box {
            background-color: var(--card-bg) !important;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.6);
            padding: 50px;
            max-width: 500px;
            width: 100%;
            border: 1px solid var(--border-color) !important;
            position: relative;
            animation: fadeInScale 0.6s ease-out;
        }

        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(20px);
            }

            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .auth-box .text-center h2 {
            font-size: 2.8rem;
            color: var(--text-light);
            margin-bottom: 15px;
            font-weight: 700;
            letter-spacing: 0.05rem;
        }

        .auth-box .instruction-text {
            color: var(--text-muted);
            margin-bottom: 30px;
            font-size: 1rem;
            line-height: 1.6;
            opacity: 0.9;
        }

        .text-center.pt-3.pb-3 {
            margin-bottom: 20px;
        }

        .text-center.pt-3.pb-3 img {
            max-width: 150px;
            height: auto;
            margin-bottom: 15px;
        }

        .form-horizontal .row.pb-4 {
            padding-bottom: 0 !important;
        }

        .input-group {
            margin-bottom: 25px;
            position: relative;
        }

        .input-group-prepend .input-group-text {
            background-color: var(--input-bg) !important;
            border: 1px solid var(--input-bg) !important;
            color: var(--text-muted) !important;
            border-right: none;
            padding: 0.9rem 1.2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 1.2rem;
        }

        .input-group-prepend .input-group-text.bg-success,
        .input-group-prepend .input-group-text.bg-warning {
            background-color: var(--input-bg) !important;
            color: var(--primary-blue) !important;
        }

        .form-control-lg {
            background-color: var(--input-bg);
            box-shadow: inset 0 3px 8px rgba(0, 0, 0, 0.4);
            border: 1px solid var(--input-bg);
            color: var(--text-light);
            padding: 0.9rem 7.2rem;
            height: auto;
            border-left: none;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .form-control-lg:focus {
            background-color: #44494f;
            border-color: transparent;
            outline: none;
            box-shadow: 0 0 0 0.3rem rgba(0, 123, 255, 0.3), inset 0 3px 8px rgba(0, 0, 0, 0.4);
        }

        .input-group:focus-within .form-control-lg::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #007bff, #4facfe, #007bff);
            border-radius: 9px;
            z-index: 0;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .input-group:focus-within .input-group-prepend .input-group-text {
            background-color: var(--primary-blue) !important;
            border-color: var(--primary-blue) !important;
            color: var(--text-light) !important;
            transform: scale(1.05);
        }

        .form-control-lg::placeholder {
            color: #777;
            opacity: 0.8;
        }

        .btn-success {
            background: linear-gradient(90deg, var(--primary-blue) 0%, #4facfe 100%) !important;
            border: none !important;
            font-size: 1.1rem;
            padding: 12px 30px;
            border-radius: 8px;
            margin: 30px auto 0 auto;
            font-weight: 600;
            letter-spacing: 0.03rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.4);
            display: block;
            max-width: 250px;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.6);
            background: linear-gradient(90deg, #4facfe 0%, var(--primary-blue) 100%) !important;
        }

        .border-top.border-secondary {
            border-top: 1px solid var(--border-color) !important;
            padding-top: 25px;
            margin-top: 25px;
        }

        #message-area {
            margin-top: 30px;
            padding: 15px 20px;
            border-radius: 8px;
            font-size: 0.95rem;
            display: none;
            font-weight: 500;
            animation: slideInFromTop 0.4s ease-out;
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.2);
            color: var(--success-color);
            border: 1px solid var(--success-color);
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.2);
            color: var(--danger-color);
            border: 1px solid var(--danger-color);
        }

        @keyframes slideInFromTop {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .preloader {
            background: linear-gradient(135deg, var(--dark-bg-2) 0%, var(--dark-bg-1) 100%);
        }

        .lds-ripple {
            display: inline-block;
            position: relative;
            width: 80px;
            height: 80px;
        }

        .lds-ripple div {
            position: absolute;
            border: 4px solid #fff;
            opacity: 1;
            border-radius: 50%;
            animation: lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite;
        }

        .lds-ripple div:nth-child(2) {
            animation-delay: -0.5s;
        }

        @keyframes lds-ripple {
            0% {
                top: 36px;
                left: 36px;
                width: 8px;
                height: 8px;
                opacity: 1;
            }

            100% {
                top: 0px;
                left: 0px;
                width: 80px;
                height: 80px;
                opacity: 0;
            }
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <div class="
          auth-wrapper
          d-flex
          no-block
          justify-content-center
          align-items-center
        ">
            <div class="auth-box">
                <div id="updatePasswordForm">
                    <div class="text-center pt-3 pb-3">
                        <h2 class="text-white mt-4">Set New Password</h2>
                        <p class="instruction-text">Enter your new password and confirm it below.</p>
                    </div>
                    <form class="form-horizontal mt-3" id="resetPasswordForm" method="post" action="/checkNewPassword">
                        <div class="row">
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white h-100"
                                            id="password-addon"><i class="mdi mdi-lock fs-4"></i><input type="password"
                                                class="form-control form-control-lg" placeholder="New Password"
                                                name="newPassword" id="newPassword" aria-label="New Password"
                                                aria-describedby="password-addon" required
                                                aria-live="assertive" /></span>
                                    </div>

                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-warning text-white h-100"
                                            id="confirm-password-addon"><i class="mdi mdi-lock-check fs-4"></i><input
                                                type="password" class="form-control form-control-lg"
                                                placeholder="Confirm New Password" name="confirmPassword"
                                                id="confirmPassword" aria-label="Confirm New Password"
                                                aria-describedby="confirm-password-addon" required
                                                aria-live="assertive" /></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row border-top border-secondary">
                            <div class="col-12">
                                <div class="form-group mb-0">
                                    <div class="pt-3 text-center">
                                        <button class="btn btn-success text-white" type="submit" id="updatePasswordBtn">
                                            Update Password
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="message-area" class="text-center" role="alert" aria-live="polite">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
        <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(window).on('load', function () {
                $(".preloader").fadeOut();
            });

            document.getElementById('resetPasswordForm').addEventListener('submit', function (event) {
                event.preventDefault();

                const messageArea = document.getElementById('message-area');

                messageArea.style.display = 'none';
                messageArea.textContent = '';
                messageArea.classList.remove('alert-success', 'alert-danger');

                // In a real application, form data would be sent to the server for validation and processing.
                // For this example, we'll simulate a success message.

                messageArea.classList.add('alert-success');
                messageArea.textContent = 'Password update request sent. Please check your email for further instructions.';
                messageArea.style.display = 'block';

                // Simulate redirection after successful update or request (optional)
                setTimeout(() => {
                    // window.location.href = '/login'; 
                }, 3000);
            });
        </script>
    <%- include('../footer')%>