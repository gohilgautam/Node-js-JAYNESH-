<%- include('../header') %>
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-wrapper {
            padding: 30px 0;
        }

        .page-breadcrumb {
            margin-bottom: 25px;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: #343a40;
            display: flex;
            align-items: center;
        }

        .page-title i {
            margin-right: 10px;
            color: #007bff;
        }

        .breadcrumb-item a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.2s ease-in-out;
        }

        .breadcrumb-item a:hover {
            color: #0056b3;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .card {
            border-radius: 0.75rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-body {
            padding: 2.5rem;
        }

        .card-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 2rem;
            color: #343a40;
            text-align: center;
        }

        .form-group.row {
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .control-label {
            font-weight: 600;
            color: #495057;
            text-align: right;
            padding-right: 15px;
        }

        .form-control {
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

        .border-top {
            border-top: 1px solid #e9ecef !important;
            padding-top: 2rem;
            margin-top: 2rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 0.35rem;
            transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-primary i {
            margin-right: 8px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            box-shadow: 0 0.25rem 0.5rem rgba(0, 123, 255, 0.2);
        }
    </style>
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title"><i class="fas fa-sitemap"></i> SubCategory Form</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Library
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/subcategory/insertSubCategory">
                            <div class="card-body">
                                <h4 class="card-title">Add New SubCategory</h4>

                                <div class="form-group row">
                                    <label for="category_id"
                                        class="col-sm-3 text-end control-label col-form-label">Category</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="category_id" name="category_id" required>
                                            <option value="">--- Select Category ---</option>
                                            <% if (allCategory && allCategory.length > 0) { %>
                                                <% allCategory.map((category)=> { %>
                                                    <option value="<%= category.id %>">
                                                        <%= category.c_title %>
                                                    </option>
                                                <% }) %>
                                            <% } else { %>
                                                <option value="" disabled>No categories available</option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="subcategory_title"
                                        class="col-sm-3 text-end control-label col-form-label">SubCategory
                                        Title</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="subcategory_title"
                                            name="subcategory_title" placeholder="Enter SubCategory Title" required />
                                    </div>
                                </div>

                                <div class="border-top">
                                    <div class="card-body text-center">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus"></i> Add Sub Category
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <%- include('../footer')%>