<%- include('../header') %>

    <!-- [ Main Content ] start -->
  <div class="pc-container">
    <div class="pc-content">
      <!-- [ breadcrumb ] start -->
      <div class="page-header">
        <div class="page-block">
          <div class="page-header-title">
            <h5 class="mb-0 font-medium">Add Admin Page</h5>
          </div>
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript: void(0)">Admin</a></li>
            <li class="breadcrumb-item" aria-current="page">Sample Page</li>
          </ul>
        </div>
      </div>
      <!-- [ breadcrumb ] end -->


    <div class="auth-main relative ">
        <div class="auth-wrapper v1 flex items-center w-full h-full min-h-screen">
            <div class="auth-form flex items-center justify-center grow flex-col min-h-screen relative p-6">
                <div class="w-full max-w-[550px] relative">
                    <div class="auth-bg">
                        <span
                            class="absolute top-[-100px] right-[-100px] w-[300px] h-[300px] block rounded-full bg-theme-bg-1 animate-[floating_7s_infinite]"></span>
                        <span
                            class="absolute top-[150px] right-[-150px] w-5 h-5 block rounded-full bg-primary-500 animate-[floating_9s_infinite]"></span>
                        <span
                            class="absolute left-[-150px] bottom-[150px] w-5 h-5 block rounded-full bg-theme-bg-1 animate-[floating_7s_infinite]"></span>
                        <span
                            class="absolute left-[-100px] bottom-[-100px] w-[300px] h-[300px] block rounded-full bg-theme-bg-2 animate-[floating_9s_infinite]"></span>
                    </div>

                    <div class="card sm:my-12 w-full shadow-none">
                        <div class="card-body !p-10">
                            <h4 class="text-center font-medium mb-6">Edit Admin</h4>

                            <form method="POST" action="/updateAdmin/<%= records._id %>" enctype="multipart/form-data">
                                <!-- First Name -->
                                <div class="mb-3">
                                    <input type="text" name="adminFname" value="<%= records?.adminFname || '' %>"
                                        class="form-control" placeholder="First Name" />
                                </div>

                                <!-- Last Name -->
                                <div class="mb-3">
                                    <input type="text" name="adminLname" value="<%= records?.adminLname || '' %>"
                                        class="form-control" placeholder="Last Name" />
                                </div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <input type="email" name="adminEmail" value="<%= records?.adminEmail || '' %>"
                                        class="form-control" placeholder="Email Address" />
                                </div>

                                <!-- Function -->
                                <div class="mb-3">
                                    <select name="adminFunction" class="form-select">
                                        <option disabled selected hidden>-- Select Function --</option>
                                        <% ["Manager", "HR" , "Web-Developer" , "Application-Developer" , "UI/UX Designer"
                    , "Project Coordinator" , "QA Engineer" , "DevOps Engineer" , "Database Administrator"
                                            ].forEach((func)=> { %>
                                            <option value="<%= func %>" <%=records?.adminFunction===func ? "selected" : "" %>><%= func %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <!-- Status -->
                                <div class="mb-3">
                                    <select name="adminStatus" class="form-select">
                                        <option disabled selected hidden>-- Select Status --</option>
                                        <% ["Online", "Offline" ].forEach((status)=> { %>
                                            <option value="<%= status %>" <%=records?.adminStatus===status ? "selected"
                                                : "" %>><%= status %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <!-- Join Date -->
                                <div class="mb-3">
                                    <input type="date" name="joinDate" class="form-control"
                                        value="<%= records?.joinDate || '' %>" />
                                </div>

                                <!-- Current Image -->
                                <% if (records?.adminImage) { %>
                                    <div class="mb-3">
                                        <label class="form-label">Current Image:</label><br>
                                        <img src="../<%= records.adminImage %>" height="100" class="rounded" />
                                    </div>
                                    <% } %>

                                        <!-- Upload Image -->
                                        <div class="mb-4">
                                            <input type="file" name="adminImage" class="form-control" />
                                        </div>

                                        <!-- Submit -->
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary w-full">Update Admin</button>
                                        </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>