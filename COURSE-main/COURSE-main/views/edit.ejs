<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .container-box {
            display: flex;
            width: 900px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
            background: white;
        }

        .right-panel {
            padding: 40px;
            flex: 2;
        }

        .btn-custom {
            width: 100%;
            background: #764ba2;
            border: none;
        }

        .btn-custom:hover {
            background: #5a3a85;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #764ba2 !important;
            box-shadow: none !important;
        }
    </style>
</head>

<body>
    <div class="container-box">
        <div class="right-panel">
            <h3 class="mb-4">Edit Course Details</h3>
            <form method="post" action="/edit/<%= record._id %>" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Course Title</label>
                    <input type="text" class="form-control" name="course_name" placeholder="Enter Course Title"
                        value="<%= record.course_name %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Course Price</label>
                    <input type="number" class="form-control" placeholder="Enter Course Price" name="course_price"
                        value="<%= record.course_price %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Course Duration</label>
                    <input type="text" class="form-control" placeholder="Enter Course Duration" name="course_duration"
                        value="<%= record.course_duration %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Course Category</label>
                    <select class="form-control" name="category" required>
                        <option value="">Select Category</option>
                        <% let genres = ["Full-stack", "Front-End", "Back-End", "AI/ML", "Game-Developer"]; %>
                        <% genres.forEach((category) => { %>
                            <option value="<%= category %>" <% if (record.category === category) { %> selected <% } %>>
                                <%= category %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Course Image</label>
                    <input type="file" class="form-control" name="course_cover">
                    <% if (record.course_cover) { %>
                        <img src="/uploads/<%= record.course_cover %>" alt="Course Image" width="150" class="mt-2">
                    <% } %>
                </div>

                <button type="submit" class="btn btn-dark btn-custom">Update</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
