<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Movie</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: url("https://i0.wp.com/sreditingzone.com/wp-content/uploads/2017/10/cb-background-115.jpg?resize=780%2C439&ssl=1") no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            backdrop-filter: blur(5px);
        }

        .form-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 30px;
            width: 420px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
            color: white;
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
            font-size: 28px;
        }

        label {
            display: block;
            margin-top: 15px;
            margin-bottom: 5px;
            font-weight: 500;
        }

        input[type="text"],
        input[type="number"],
        input[type="file"],
        textarea {
            width: 100%;
            padding: 10px 12px;
            border: none;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            outline: none;
            transition: background-color 0.3s;
        }

        input::placeholder,
        textarea::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        input:focus,
        textarea:focus {
            background-color: rgba(255, 255, 255, 0.3);
        }

        textarea {
            resize: none;
        }

        .select-wrapper {
            position: relative;
            width: 100%;
        }

        .select-wrapper select {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 12px;
            width: 100%;
            font-size: 15px;
            font-weight: 500;
            backdrop-filter: blur(4px);
            -webkit-backdrop-filter: blur(4px);
            cursor: pointer;
        }

        .select-wrapper select:focus {
            background-color: rgba(255, 255, 255, 0.3);
        }

        .select-wrapper option {
            background-color: #222;
            color: #fff;
            padding: 10px;
            font-size: 15px;
            font-family: 'Segoe UI', sans-serif;
        }

        .select-wrapper select option:hover {
            background-color: #444;
        }

        .custom-arrow {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            pointer-events: none;
            font-size: 16px;
            color: white;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 25px;
            background: linear-gradient(135deg, #43e97b, #38f9d7);
            color: #000;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.4s ease;
        }

        button:hover {
            background: linear-gradient(135deg, #30cfd0, #330867);
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <h2>Add New Movie</h2>
        <form action="/movie" method="POST" enctype="multipart/form-data">
            <label for="movieName">Movie Name</label>
            <input type="text" id="movieName" name="MovieName" placeholder="e.g. Inception" required />

            <label for="genre">Genre</label>
            <div class="select-wrapper">
                <select name="Genre">
                    <option value="">-- Select Genre --</option>
                    <% let genere=["Action","Comedy","Drama","Horror","Romance","Sci-Fi","Thriller","Fantasy","Documentary"]%>

                        <% genere.map((data)=> { %>

                            <option value="<%= data %>">
                                <%= data %>
                            </option>

                            <% }) %>
                </select>
                <span class="custom-arrow">&#9662;</span>
            </div>


            <label for="price">Price ($)</label>
            <input type="number" id="price" name="Price" step="0.01" placeholder="e.g. 12.99" required />

            <label for="rating">Rating (1-10)</label>
            <input type="number" id="rating" name="Rating" min="1" max="10" step="0.1" placeholder="e.g. 8.5"
                required />

            <label for="description">Description</label>
            <textarea id="description" name="Description" rows="4" placeholder="Write a short description..."
                required></textarea>

            <label for="movieImage">Movie Image</label>
            <input type="file" id="movieImage" name="MovieImage" accept="image/*" required />


            <button type="submit">Add Movie</button>
        </form>
    </div>

    <script>
        // Get the file input element and image preview element
        const movieImageInput = document.getElementById("movieImage");

        // Create an image preview element
        const imagePreview = document.createElement("img");
        imagePreview.id = "imagePreview";
        imagePreview.style.display = "none";
        imagePreview.style.width = "100%";
        imagePreview.style.marginTop = "15px";
        imagePreview.style.borderRadius = "10px";

        // Insert the image preview below the file input
        movieImageInput.insertAdjacentElement('afterend', imagePreview);

        // Listen for the file input change event
        movieImageInput.addEventListener("change", function (event) {
            const file = event.target.files[0];

            // If a file is selected
            if (file) {
                // Create a URL for the selected image
                const objectURL = URL.createObjectURL(file);

                // Set the image preview source
                imagePreview.src = objectURL;
                imagePreview.style.display = "block"; // Show the image
            } else {
                imagePreview.style.display = "none"; // Hide the image if no file selected
            }
        });
    </script>

</body>

</html>