<%- include('../header') %>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f0f8ff 0%, #e6f3ff 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #333;
      padding: 20px;
      box-sizing: border-box;
      position: relative;
    }

    .auth-bg span {
      position: absolute;
      display: block;
      border-radius: 50%;
      filter: blur(90px);
      z-index: -1;
      opacity: 0.5;
      animation: floating 7s infinite ease-in-out;
    }

    .auth-bg span:nth-child(2) {
      animation-duration: 9s;
      animation-direction: reverse;
    }

    .auth-bg span:nth-child(3) {
      animation-duration: 7s;
    }

    .auth-bg span:nth-child(4) {
      animation-duration: 9s;
    }

    .auth-bg span:nth-child(1) {
      top: -120px;
      right: -120px;
      width: 350px;
      height: 350px;
      background: rgba(173, 216, 230, 0.6);
    }

    .auth-bg span:nth-child(2) {
      top: 180px;
      right: -180px;
      width: 30px;
      height: 30px;
      background: rgba(255, 223, 0, 0.7);
    }

    .auth-bg span:nth-child(3) {
      left: -180px;
      bottom: 180px;
      width: 30px;
      height: 30px;
      background: rgba(0, 150, 255, 0.7);
    }

    .auth-bg span:nth-child(4) {
      left: -120px;
      bottom: -120px;
      width: 350px;
      height: 350px;
      background: rgba(135, 206, 250, 0.6);
    }

    @keyframes floating {
      0% {
        transform: translateY(0px) translateX(0px);
      }

      50% {
        transform: translateY(-25px) translateX(15px);
      }

      100% {
        transform: translateY(0px) translateX(0px);
      }
    }

    .container {
      width: 100%;
      max-width: 480px;
      margin: auto;
      padding: 0;
    }

    .card {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      border-radius: 30px;
      border: 1px solid rgba(255, 255, 255, 0.6);
      box-shadow: 0 20px 70px 0 rgba(31, 38, 135, 0.4);
      padding: 45px;
      animation: fadeIn 0.8s ease-out;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 25px 80px 0 rgba(31, 38, 135, 0.5);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-header {
      border-bottom: none;
      padding: 0;
      margin-bottom: 30px;
    }

    .card-title {
      font-size: 2.2em;
      font-weight: 700;
      color: #2c3e50;
      text-align: center;
      position: relative;
      padding-bottom: 18px;
    }

    .card-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 70px;
      height: 6px;
      background: linear-gradient(to right, #007bff, #20c997);
      border-radius: 3px;
    }

    .card-body {
      padding: 0;
    }

    .form-group {
      margin-bottom: 25px;
    }

    .form-group label {
      display: block;
      margin-bottom: 10px;
      font-weight: 600;
      color: #3f51b5;
      font-size: 1em;
    }

    .form-control {
      width: 100%;
      padding: 14px 20px;
      border: 1px solid #c0c0c0;
      border-radius: 15px;
      font-size: 1.05em;
      color: #333;
      background-color: rgba(255, 255, 255, 0.98);
      transition: all 0.3s ease;
      outline: none;
      box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.08);
    }

    .form-control::placeholder {
      color: #b0b0b0;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 5px rgba(0, 123, 255, 0.3);
      background-color: #fff;
    }

    .btn-success {
      background: linear-gradient(45deg, #20c997, #17a2b8);
      color: #fff;
      padding: 16px 35px;
      border-radius: 15px;
      font-weight: 700;
      font-size: 1.2em;
      transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      border: none;
      cursor: pointer;
      box-shadow: 0 10px 30px rgba(32, 201, 151, 0.4);
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 40px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .btn-success i {
      margin-right: 10px;
      font-size: 1.3em;
    }

    .btn-success:hover {
      background: linear-gradient(45deg, #17a2b8, #138496);
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(32, 201, 151, 0.5);
    }

    @media (max-width: 640px) {
      .container {
        padding: 15px;
      }

      .card {
        padding: 30px;
        border-radius: 20px;
      }

      .card-title {
        font-size: 1.8em;
        margin-bottom: 25px;
      }

      .card-title::after {
        width: 50px;
        height: 4px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group label {
        font-size: 0.9em;
        margin-bottom: 6px;
      }

      .form-control {
        padding: 12px 18px;
        font-size: 1em;
      }

      .btn-success {
        padding: 14px 25px;
        font-size: 1.05em;
        margin-top: 25px;
      }
    }
  </style>

  <div class="content w-100 flex items-center justify-center min-h-screen">
    <div class="auth-bg">
      <span class="absolute top-[-100px] right-[-100px] w-[300px] h-[300px] block rounded-full bg-theme-bg-1"></span>
      <span class="absolute top-[150px] right-[-150px] w-5 h-5 block rounded-full bg-primary-500"></span>
      <span class="absolute left-[-150px] bottom-[150px] w-5 h-5 block rounded-full bg-theme-bg-1"></span>
      <span class="absolute left-[-100px] bottom-[-100px] w-[300px] h-[300px] block rounded-full bg-theme-bg-2"></span>
    </div>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="card-title">Change Password</div>
            </div>
            <div class="card-body">
              <form action="/changemypassword" method="post">
                <div class="form-group">
                  <label for="oldpassword">Old Password</label>
                  <input type="password" class="form-control" id="oldpassword" name="oldpassword"
                    placeholder="Enter your old password" required />
                </div>
                <div class="form-group">
                  <label for="newpassword">New Password</label>
                  <input type="password" class="form-control" id="newpassword" name="newpassword"
                    placeholder="Enter new password" required />
                </div>
                <div class="form-group">
                  <label for="confimpassword">Confirm Password</label>
                  <input type="password" class="form-control" id="confimpassword" name="confimpassword"
                    placeholder="Confirm your new password" required />
                </div>
                <div class="card-action text-center">
                  <button class="btn btn-success" type="submit">
                    <i class="fas fa-key me-2"></i> Change Password
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../footer') %>