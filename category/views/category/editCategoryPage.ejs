<%- include('../header') %>

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f0f4f8 0%, #e6eff7 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #333;
            padding: 20px;
            box-sizing: border-box;
            position: relative;
        }

        .container {
            width: 100%;
            max-width: 500px;
            margin: auto;
            padding: 0;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 18px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            width: 572px;
            max-width: 100%;
            padding: 45px;
            animation: fadeInScale 0.6s cubic-bezier(0.2, 0.8, 0.2, 1.2);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            border: 1px solid rgba(255, 255, 255, 0.8);
            position: relative;
            z-index: 10;
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        }
        @keyframes fadeInScale {
            from { opacity: 0; transform: translateY(20px) scale(0.98); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        h4 {
            font-size: 2.2em;
            font-weight: 700;
            color: #2c3e50;
            text-align: center;
            position: relative;
            padding-bottom: 18px;
            margin-bottom: 35px;
            text-shadow: 0 1px 3px rgba(0,0,0,0.05);
        }
        h4::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 70px;
            height: 5px;
            background: linear-gradient(to right, #007bff, #20c997);
            border-radius: 3px;
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            border: 1px solid #c0c0c0;
            border-radius: 12px;
            font-size: 1.05em;
            color: #333;
            background-color: #ffffff;
            transition: all 0.3s ease;
            outline: none;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-control::placeholder {
            color: #a0a0a0;
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.2), inset 0 2px 5px rgba(0, 0, 0, 0.08);
            background-color: #fff;
        }

        .form-control-file {
            padding: 14px 20px;
            border: 1px solid #c0c0c0;
            border-radius: 12px;
            font-size: 1.05em;
            color: #333;
            background-color: #ffffff;
            transition: all 0.3s ease;
            outline: none;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
        }
        .form-control-file::-webkit-file-upload-button {
            visibility: hidden;
            width: 0;
            padding: 0;
            margin: 0;
        }
        .form-control-file::before {
            content: 'Choose File';
            display: inline-block;
            background: linear-gradient(45deg, #20c997, #17a2b8);
            color: #fff;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-right: 15px;
            box-shadow: 0 4px 10px rgba(32, 201, 151, 0.3);
        }
        .form-control-file:hover::before {
            background: linear-gradient(45deg, #17a2b8, #138496);
            box-shadow: 0 6px 15px rgba(32, 201, 151, 0.4);
            transform: translateY(-2px);
        }
        .form-control-file:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.2);
        }

        /* Style for the image inside the form */
        .category-preview-image {
            max-width: 80px; /* Decreased width */
            height: auto; /* Maintain aspect ratio */
            border-radius: 8px; /* Slightly rounded corners for the image */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for the image */
            margin-top: 10px; /* Space below the file input */
            display: block; /* Ensures it takes its own line */
        }

        .btn-success-custom {
            background: linear-gradient(45deg, #20c997, #17a2b8);
            color: #fff;
            padding: 16px 32px;
            border-radius: 15px;
            font-weight: 700;
            font-size: 1.15em;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1.25);
            border: none;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(32, 201, 151, 0.3);
            width: 70%;
            max-width: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            margin: auto;
            position: relative;
            overflow: hidden;
        }
        .btn-success-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 50%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transform: skewX(-20deg);
            transition: all 0.7s cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        .btn-success-custom:hover::before {
            left: 100%;
        }

        .btn-success-custom i { margin-right: 10px; font-size: 1.2em; }
        .btn-success-custom:hover {
            background: linear-gradient(45deg, #17a2b8, #20c997);
            transform: translateY(-4px) scale(1.01);
            box-shadow: 0 12px 30px rgba(32, 201, 151, 0.45);
        }

        @media (max-width: 640px) {
            .card { padding: 35px; border-radius: 15px; }
            h4 { font-size: 2em; margin-bottom: 30px; padding-bottom: 15px; }
            h4::after { width: 50px; height: 4px; }
            .form-group { margin-bottom: 25px; }
            .form-control { padding: 14px 18px; font-size: 1em;}
            .form-control-file { padding: 12px 18px; font-size: 1em;}
            .form-control-file::before { padding: 8px 15px; font-size: 0.95em; }
            .btn-success-custom {
                padding: 14px 28px;
                font-size: 1.1em;
                width: 100%;
                max-width: none;
            }
        }
    </style>

   <div class="auth-main relative">
        <div class="auth-wrapper v1 flex items-center w-full h-full min-h-screen">
            <div class="auth-form flex items-center justify-center grow flex-col min-h-screen relative p-6">
                <div class="w-full max-w-[500px] relative">
                    <div class="card sm:my-12 w-full shadow-none">
                        <div class="card-body !p-10">
                            <h4>Add New Category</h4>
                            <form method="post" action="/category/insertCategory" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="c_title" class="sr-only">Category Title</label>
                                    <input type="text" class="form-control" id="c_title" name="c_title"
                                        placeholder="Enter category title" required>
                                </div>
                                <div class="form-group">
                                    <label for="c_image" class="sr-only">Category Image</label>
                                    <input class="form-control-file" type="file" id="c_image" name="c_image" required>
                                    <!-- Image tag added here with a specific class for styling -->
                                    <img src="https://placehold.co/80x80/e0e2e5/6c757d?text=Preview" alt="Category Image Preview" class="category-preview-image" />
                                </div>
                                <div class="text-center mt-8">
                                    <button type="submit" class="btn-success-custom">
                                        <i class="fas fa-plus-circle"></i> Add Category
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>