<!DOCTYPE html>
<html lang="en">

<head>
    <title>Fetch Stud</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div class="container col-4 my-4">
        <h1 align="center">Fetch Students</h1>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Course Title</th>
                    <th scope="col">Course Price</th>
                    <th scope="col">Course Duration</th>
                    <th scope="col">Course Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% records.map((e)=> {
                    const {id,Cname,Cprice,Ccduration,Ccategory,image}=e;
                    %>
                    <tr>
                        <td>
                            <%= Cname%>
                        </td>
                        <td>
                            <%= Cprice%>
                        </td>
                        <td>
                            <%= Ccduration%>
                        </td>
                        <td>
                            <%= Ccategory%>
                        </td>
                        <td>
                            <img src="<%= image%>" width="250">
                        </td>
                        <td>
                            <button class="btn btn-warning"><a href="/editcourse?id=<%= id%>">Add Course</a></button>
                            <button class="btn btn-danger"><a href="/deletecourse/<%= id%>">Delete Course</a></button>
                        </td>
                    </tr>

                    <% })%>
            </tbody>
        </table>

        <br>
        <a href="/">Add Students</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>